<?php

$finder = PhpCsFixer\Finder::create()
    ->exclude('vendor')
    ->in(__DIR__);

return PhpCsFixer\Config::create()
    ->setRules(array(
        '@Symfony'             => true,
        '@Symfony:risky'       => true,
        'declare_strict_types' => true,
        'array_syntax'         => array('syntax' => 'short'),
        'protected_to_private' => false,
    ))
    ->setRiskyAllowed(true)
    ->setFinder($finder);
